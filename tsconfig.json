{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "target": "esnext",
    "module": "NodeNext",
    "incremental": true,
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": ["src"]
}
